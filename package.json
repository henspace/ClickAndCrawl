{
  "name": "ScriptedRPG",
  "version": "1.0.0",
  "description": "Create an RPG Dungeon crawler using a simple text based script.",
  "source": "src/index.html",
  "scripts": {
    "prebuild": "node ./tools/cleanDir.js ./build",
    "build": "parcel build --dist-dir build --public-url . ",
    "start": "parcel src/index.html",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js ./src",
    "doc": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "game",
    "rpg",
    "dungeon"
  ],
  "author": "Steve Butler",
  "license": "MIT",
  "private": true,
  "jest": {
    "testEnvironment": "jsdom"
  },
  "type": "module",
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "parcel": "^2.10.3"
  }
}
